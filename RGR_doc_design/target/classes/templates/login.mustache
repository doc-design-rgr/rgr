<!DOCTYPE html>
<html>
<head>
    <title>Sign up</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
</head>
<style>
    html {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        background-color: rgba(99,166,255,0.52);
    }
    body {
        width: 100%;
        position: relative;
        font-family: 'Montserrat', sans-serif;
    }
    h1 {
        color: rgba(104,165,255,0.98);
    }
    .sign_up_div {
        border: 2px solid green;
        background-color: white;
        border-radius: 20px;
        padding: 20px;
        margin: 150px auto;
        width: 400px;
        min-height: 470px;
        text-align: center;
    }
    .log_in_div{
        border: 2px solid green;
        background-color: white;
        border-radius: 20px;
        padding: 20px;
        margin: 150px auto;
        width: 400px;
        min-height: 310px;
        text-align: center;
    }
    .sign_up_form, .log_in_form {
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    input {
        padding-left: 10px;
        height: 40px;
        font-size: 18px;
        border-radius: 10px;
        border: 1px solid rgba(104,165,255,0.98);
        margin-bottom: 30px;
        outline: none;
    }
    .sign_up_btn, .log_in_btn {
        width: 150px;
        height: 40px;
        border-radius: 10px;
        margin: auto;
        color: white;
        font-size: 18px;
        cursor: pointer;
        outline: none;
        background-color: green;
    }
    .log_in_link, .sign_up_link {
        color: rgba(104,165,255,0.98);
        text-decoration: underline;
        font-size: 18px;
        margin: 10px auto;
        cursor: pointer;
        outline: none;
    }
    .hide {
        display: none;
    }
</style>

<body>
<div class="sign_up_div">
    <h1>Please sign up</h1>
    <form class="sign_up_form" method="post" action="/register/profile">
        <input type="text" name="customerName" placeholder="Name" />
        <input type="text" name="customerPhone" placeholder="Phone" />
        <input type="email" name="customerEmail" placeholder="Email" />
        <input type="password" name="customerPassword" placeholder="Password" />
        <button class="sign_up_btn" type="submit">Sign up</button>
    </form>
    <h2 class="log_in_link" onclick="showLogInForm()">Log in</h2>
</div>
<div class="log_in_div hide">
    <h1>Please log in</h1>
    <form class="log_in_form" method="post" action="/profile">
        <input type="email" name="customerEmail" placeholder="Email" />
        <input type="password" name="customerPassword" placeholder="Password" />
        <button class="log_in_btn" type="submit">Log in</button>
    </form>
    <h2 class="sign_up_link" onclick="showSignUpForm()">Sign up</h2>
</div>

<script>
    function showLogInForm() {
        var logInForm = document.getElementsByClassName('log_in_div')[0];
        var signUpForm = document.getElementsByClassName('sign_up_div')[0];
        signUpForm.classList.add('hide');
        logInForm.classList.remove('hide');
    }
    function showSignUpForm() {
        var logInForm = document.getElementsByClassName('log_in_div')[0];
        var signUpForm = document.getElementsByClassName('sign_up_div')[0];
        signUpForm.classList.remove('hide');
        logInForm.classList.add('hide');
    }
</script>
</body>
</html>